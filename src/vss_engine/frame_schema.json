{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VideoFrame",
  "type": "object",
  "properties": {
    "frame": {
      "type": "integer",
      "minimum": 0,
      "description": "Frame index starting at zero"
    },
    "time": {
      "type": "number",
      "minimum": 0,
      "description": "Timestamp in seconds for this frame"
    },
    "caption": {
      "type": "string",
      "description": "Description of the frame"
    }
  },
  "required": [
    "frame",
    "time",
    "caption"
  ]
}
